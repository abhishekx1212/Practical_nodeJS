<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body class="bg-dark">
    <%- include('./partials/header.ejs') -%>
        <div class="container">
            <h2 class="text-white">Category List</h2>
            <span class="text-light">Add category through Postman</span>
            <div class="container">
                <ul class="p-0 mt-4">
                    <% catData.map((val)=>{ %>
                        <li class="text-white py-1" style="font-size: 20px;">
                            <%= val.CatName %> <a class="btn btn-danger px-3 py-0" href="/category/deleteCat/<%= val._id %>">DELETE</a> <a href="#"
                                    type="button" class="btn btn-warning px-3 py-0" data-bs-toggle="modal"
                                    data-bs-target="#edit<%= val._id %>">
                                    <span class="text-light fw-semibold">
                                        EDIT
                                    </span>
                                </a>
                        </li>
                        <% }) %>
                </ul>
                <% catData.map((val)=>{ %>
                    <div class="edit-modal">
                        <div class="modal fade" id="edit<%= val._id %>" data-bs-backdrop="static"
                            data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content px-2"
                                    style="border-radius: 10px; background-color: rgba(225 ,225 ,225 ,0.9 ); width: 100%;">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="staticBackdropLabel">
                                            EDIT
                                        </h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/category/update" method="post" class="mb-3">
                                            <input type="hidden" value="<%= val._id %>" name="id" required>
                                            <input type="text" name="CatName" value="<%= val.CatName %>" required>
                                            <input type="submit" name="" id="type" value="UPDATE"
                                                style="font-size: 20px;" class="border form-control btn-success btn" required>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

</body>

</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
